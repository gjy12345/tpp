.root{
    width: 100vw;
    height: 100vh;
    background-color: #f5f6f8;
    padding-bottom:calc(env(safe-area-inset-bottom)/2);
}
.top_info{
    text-align: center;
    padding-top: 3vh;
    margin-bottom: 2vh;
    color: gray;
}
.top_info>.btn{
    border: 1px solid gold;
    width: 20vw;
    border-radius: 20rpx;
}


.order_info{
    margin-top: 3vw;
    display: flex;
}
.film_cover{
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    position: relative;
    background: #e2e2e2 no-repeat 50%;
    border-radius: 6px;
    background-image: url(https://gw.alicdn.com/tfs/TB1B5m3hQT2gK0jSZPcXXcKkpXa-62-62.svg);
    align-items: center;
    width: 21vw;
    height: 30.7vw;
    background-size: 8vw 8vw;
}
.film_cover_layout{
    margin: 2vw;
    display: flex;
    align-self: center;
}

.texts{
    flex: 1;
    display: flex;
    margin: 2vw;
    flex-direction: column;
}

.film_name{
    font-weight: bold;
    font-size: 36rpx;
}
.gray_text{
    color: gray;
    font-size: 25rpx;
    margin-top: 0.6vh;
}
.content{
    margin-left: 3vw;
    margin-right: 3vw;
    background-color: white;
    border-radius: 3vw;
}
.t1{
    font-size: 32rpx;
    margin: 1.2vh;
    font-weight: bold;
}
.barcode>.img{
    width: 22vh;
    height: 22vh;
}
.barcode{
    text-align: center;
}
.cinema_layout{
    display: flex;
    padding-top: 3vh;
    padding-bottom: 3vh;
}
.cinema_layout>.left{
    flex: 1;
}

.cinema_layout>.right{
    width: 10vw;
    display: flex;
    align-items: center;
}
.cinema_layout>.right>image{
    width: 6vw;
    height: 6vw;
}
.kf_layout{
    /* padding-bottom:calc(env(safe-area-inset-bottom)/2); */
    margin-top: 2vh;
    padding-bottom: 2vh;
}
.order_num{
    display: flex;
    align-items: center;
}
.order_num>.t1{
    flex: 1;
}
.view_info{
    font-size: 25rpx;
    color: gray;
    margin-right: 2vw;
    border-bottom: 1px solid #ccc;
}

.sx{
    filter:alpha(opacity=60);  /*设置透明度为60%*/
    opacity:0.2;  /*非IE浏览器下设置透明度为60%*/
}

.sx_text{
    position: absolute;
    text-align: center;
    margin-top: -22vh;
    width: 100vw;
    line-height: 22vh;
    font-size: 52rpx;
}

.tickets_layout{
    flex-direction: column;
    align-items: unset;
}
.ticket>.icon{
    width: 6vw;
    height: 6vw;
    margin: 1vh;
}
.ticket{
    display: flex;
    align-items: center;
    padding-left: 2vw;
}
.ticket>.position{
    font-size: 3.4vw;
    margin-left: 2vw;
    margin-right: 2vw;
}
