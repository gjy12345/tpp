#root{
    background-color: #f5f6f8;
    display: flex;
    flex-direction: column;
    height: 100vh;
}
.content{
    flex: 1;
    width: 100%;
    overflow-y: scroll;
}
.button_btn{
    height: 8vh;
    background-color: white;
    margin-bottom: calc(env(safe-area-inset-bottom)/2);
    display: flex;
    align-items: center;
    padding-left: 3vw;
    padding-right: 3vw;
}
.money{
    color: red;
    
}
.info{
    flex: 1;
    color: gray;
    text-align: right;
    font-size: 2.9vw;
    margin-right: 2vw;
}
.pay_btn{
    outline: 0;
    text-decoration: none;
    border: 0;
    text-align: center;
    vertical-align: middle;
    user-select: none;
    color: #fff;
    background-color: transparent;
    box-sizing: border-box;
    height: 4.2vh;
    line-height: 4.2vh;
    padding: 0 7.3vw;
    font-size: 1.6vh;
    border-radius: 4vw;
    background-image: linear-gradient(45deg,#ff5456,#ff3d5c);
}
.order_info{
    background-color: white;
    margin-top: 3vw;
    margin-left: 3vw;
    margin-right: 3vw;
    display: flex;
    border-radius: 3vw;
}
.film_cover{
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    position: relative;
    background: #e2e2e2 no-repeat 50%;
    border-radius: 6px;
    background-image: url(https://gw.alicdn.com/tfs/TB1B5m3hQT2gK0jSZPcXXcKkpXa-62-62.svg);
    align-items: center;
    width: 21vw;
    height: 30.7vw;
    background-size: 8vw 8vw;
}
.film_cover_layout{
    margin: 2vw;
}

.texts{
    flex: 1;
    display: flex;
    margin: 2vw;
    flex-direction: column;
}

.film_name{
    font-weight: bold;
    font-size: 4.4vw;
}
.gray_text{
    color: gray;
    font-size: 3.2vw;
    margin-top: 0.6vh;
}
.phone_layout,.gpxz,.tickets_layout{
    margin-top: 3vw;
    background-color: white;
    margin-left: 3vw;
    margin-right: 3vw;
    border-radius: 3vw;
    display: flex;
    align-items: center;
}

.phone_layout>.icon{
    width: 10vw;
    height: 10vw;
    margin: 3vw;
}
.phone_layout>.phone{
    font-size: 3.8vw;
    margin-top: 0.6vh;
}
.phone_layout>.phone_layout>.gray_text{
    font-size: 2vw;
}
.gpxz{
    flex-direction: column;
    align-items: unset;
}
.gpxz>.title{
    font-size: 3.5vw;
    margin: 2vw;
    font-weight: bold;
}

.lines{
    margin-top: 3vw;
    margin-left: 3vw;
    margin-right: 3vw;
    margin-bottom: 3vw;
}
.tickets_layout{
    flex-direction: column;
    align-items: unset;
}
.ticket>.icon{
    width: 6vw;
    height: 6vw;
    margin: 1vh;
}
.ticket{
    display: flex;
    align-items: center;
    padding-left: 2vw;
}
.ticket>.position{
    font-size: 3.4vw;
    margin-left: 2vw;
    margin-right: 2vw;
}

.cancel_btn{
    text-decoration: none;
    border: 0;
    text-align: center;
    vertical-align: middle;
    user-select: none;
    color: gray;
    background-color: transparent;
    box-sizing: border-box;
    height: 4.2vh;
    line-height: 4.2vh;
    padding: 0 6vw;
    font-size: 1.6vh;
    border-radius: 4vw;
}