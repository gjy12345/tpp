
.film_cover {
    background: #e2e2e2 no-repeat 50%;
    border-radius: 6px;
    min-width: 17.3vw;
    min-height: 25.3vw;
    width: 17.3vw;
    height: 25.3vw;
    margin-top: 6vw;
    margin-right: 4vw;
}

.film_content {
    height: auto;
    display: flex;
    width: auto;
    height: 35vw;
    overflow-x: scroll;
}

.film_content::-webkit-scrollbar {

    display: none;
    /*隐藏滚动条*/

}


.film_cover:first-child {
    margin-left: 4vw;
}

.top_layout {
    width: 100%;
    height: 18vh;
    position: relative;
}

.film_cover_active {
    height: 30vw;
    width: 20.5vw;
    margin-top: 4vw;
    min-width: 20.5vw;
    min-height: 30vw;
}

.top_mk {
    position: absolute;
    top: 0;
    z-index: 2;
    background: #f9f9f9;
    width: 100%;
    height: 18vh;
    background-color: #000;
    filter: alpha(opacity=50);
    -moz-opacity: 0.5;
    opacity: 0.5;
}

.info {
    position: absolute;
    top: 0;
    color: white;
    width: 100%;
    z-index: 2;
    text-align: center;
}

.cinema_name {
    margin-top: 3vh;
    font-weight: bold;
    font-size: 4.4vw;
}

.services {
    margin-top: 3vh;
    font-size: 3vw;
}

.cinema_address {
    margin-top: 2vh;
    font-size: 3vw;
}

.film_info {
    text-align: center;
    margin-top: 2vh;
    margin-left: 2vw;
    margin-right: 2vw;
}

.gray_text {
    margin: 2vh;
    margin-left: 2vw;
    display: block;
    color: gray;
    font-size: 3.2vw;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.film_name_layout{
    display: flex;
    justify-content: center;
    align-items: center;
}

.film_name_layout>.pf{
    color: gray;
    font-size: 1.8vh;
    margin-left: 1vw;
    margin-right: 1vw;
}

.score{
    font-size: 2.4vh;
    color: tomato;
}

.film_name{
    font-size: 2.2vh;
}

/* .schedule_content {} */

.chose_days{
    margin: 4vw 4vw 2vw 4vw;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    overflow-x: scroll;
    overflow: scroll;
    scrollbar-color: white;
}
.chose_days>.item{
    min-width: 22vw;
    margin-right: 3vw;
    display: block;
    font-size: 3.2vw;
    text-align: center;
    color: gray;
}

.chose_days>.day_item_active{
    border-bottom: 1px solid red;
    border-bottom-width: 2px;
    padding-bottom:2vw;
    color: red;
}

.chose_days::-webkit-scrollbar {

    display: none;
    /*隐藏滚动条*/

}

#schedule_list{
    margin-left: 2vw;
    margin-right: 2vw;
    background-color: #f5f6f8;
    margin-top:2vh;
    display: flex;
    flex-direction: column;
}

.schedule_time{
    text-align: center;
}

.schedule_item{
    margin-top: 1.2vh;
    display: flex;
    background-color: white;
    padding: 1vh;
    align-items: center;
}
.end_time{
    color: gray;
    font-size: 3.2vw;
    margin-top: 0.5vh;
}
.begin_time{
    font-weight: bold;
}
.schedule_info{
    display: flex;
    text-align: center;
    margin-left: 5vw;
    flex-direction: column;
    align-items: center;
}
.hall{
    color: gray;
    font-size: 3.2vw;
}
.money{
    flex: 1;
    text-align: right;
    color: red;
    margin-right: 2vh;
}
.mini_gray{
    color: gray;
    font-size: 3.2vw;
}

.buy{
    outline: 0;
    text-decoration: none;
    border: 0;
    text-align: center;
    vertical-align: middle;
    user-select: none;
    color: #fff;
    background-color: transparent;
    box-sizing: border-box;
    height: 3.4vh;
    line-height: 3.4vh;
    padding: 0 13px;
    font-size: 1.5vh;
    border-radius: 120px;
    background-image: linear-gradient(45deg,#ff5456,#ff3d5c);
}