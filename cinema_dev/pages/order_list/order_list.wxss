.list_content {
    display: flex;
    flex-direction: column;
}

.order_item {
    width: 90vw;
    margin: 0 auto;
    background-color: white;
    padding: 2vw;
    margin-top: 1vh;
    border-radius: 20rpx;
    border: 1px solid rgb(226, 225, 225);
}

.order_num {
    font-size: 25rpx;
    margin-bottom: 8rpx;
    flex: 1;
}

.used {
    color: gray;
}

.order_time {
    font-size: 20rpx;
    margin-top: 4rpx;
    margin-bottom: 4rpx;
    color: gray;
}

.film_name {
    font-size: 35rpx;
    margin-top: 1.4vh;
    margin-bottom: 1.8vh;
}

.cinema_info {
    font-size: 25rpx;
    margin-bottom: 4rpx;
}

.type {
    overflow: hidden;
    position: fixed;
    z-index: 9999;
    margin-left: 60%;
    background-color: red;
    border-radius: 15vh;
    width: 12vh;
    height: 12vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.order_item>.content{
    display: flex;
    flex-direction: row;
}
.order_item>.content>.left{
    flex: 1;
}

.order_item>.content>.right>.btn{
    outline: 0;
    text-decoration: none;
    border: 0;
    color: #fff;
    background-color: transparent;
    box-sizing: border-box;
    height: 4.2vh;
    line-height: 4.2vh;
    padding: 0 7.3vw;
    font-size: 1.6vh;
    border-radius: 4vw;
}
.order_item>.content>.right{
    display: flex;
    align-items: center;
}
.order_item>.top{
    display: flex;
}

.order_item>.top>.status{
    font-size: 25rpx;
    margin-bottom: 8rpx;
    color: red;
}

.pj{
    background-image: linear-gradient(45deg,rgb(255, 0, 234),rgb(255, 0, 255));
}
.red_btn{
    background-image: linear-gradient(45deg,#ff5456,#ff3d5c);
}
.pr{
    background-image: linear-gradient(45deg,#54d7ff,#3da1ff);
}
.sx{
    background-image: linear-gradient(45deg,#aaadad,#a4a6a8);
}
.ypj{
    background-image: linear-gradient(45deg,rgb(90, 90, 90),rgb(67, 68, 68));
}